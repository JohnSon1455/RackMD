<section class="w-screen flex bg-gray">
  <%= render "side_nav" %>
  <div class="mx-5">
    <div >
        <p class="text-white p-2">設定</p>
    </div>
      <ul class="text-white flex-initial bg-black w-28">
        <a href="#"><li class="bg-gray-400 p-1">一般設定</li></a>
        <a href="#"><li class="hover:bg-gray-400 p-1">筆記設定 </li></a>
        <a href="#"><li class="hover:bg-gray-400 p-1">通知</li></a>
        <a href="#"><li class="hover:bg-gray-400 p-1">其他服務授權</li></a>
      </ul>
  </div>
  <div class="w-28 my-5 mx-5">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div>
      <p class="border-b-2 text-white">一般設定</p>
    </div>
    <div class="field relative">
      <p class="text-white">名字</p>
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      <%= f.submit "確認更新" , class: "user-btn hover:bg-white" %>
    </div>
    <div class="field">
      <%= f.label :email, class:"text-white" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <div class="field">
      <p class="text-white">重設密碼</p>
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <p>輸入<%= @minimum_password_length %>位數</p>
      <% end %>
    </div>
    <div class="field">
        <p class="text-white">再次輸入密碼</p>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    <div class="field">
        <p class="text-white">輸入使用者密碼</p>
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>
    <div class="actions">
      <%= f.submit "變更密碼", class: "user-btn m-1 hover:bg-white"  %>
    </div>
    <div class="field">
       <p class="text-white">自我介紹</p>
      <%= f.text_area :intro %>
      <button>
      <%= f.submit "確認更新", class: "user-btn hover:bg-white" %>
      </button>
    </div>
  <% end %>
  <%= button_to "刪除帳號", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete , class: "user-btn m-1 hover:bg-white" %>
  <%= link_to "Back", :back %>
  </div>
  <div class="w-28  absolute top-16 right-1 grid justify-items-center">
    <%= image_tag("104.png",:size => "150x150") %>
    <button class="user-btn p-1 m-1 hover:bg-white">選擇大頭照</button>
    <button class="user-btn p-1 m-1 hover:bg-white">重設大頭照</button>
  </div>
</section>