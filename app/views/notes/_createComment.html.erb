<div data-controller="commentToggle">
  <%= form_with(model: @comment, url: note_comments_path(@note), local: false) do |f| %>
    <div class="flex justify-center items-center h-20">
      <%= f.text_area :content, 
          placeholder:"輸入您的留言...", 
          data: {action: "click->commentToggle#toggle"}, 
          class:"border-solid border border-gray-300 rounded text-sm h-12 w-40" %>
    </div>
    <div data-commentToggle-target="display" style="display: none;">
      <%= f.submit "送出",class:"commentbtn bg-blue-500 ml-5 mb-3 py-0.5 px-2" %>
      <a href="#" class="ml-2 commentbtn py-1 px-2">取消</a>
    </div>
  <% end %>
</div>
