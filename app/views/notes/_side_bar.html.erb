<div class="sidebar" data-controller = "sideBar"
                     data-sideBar-target = "sidebar">

  <ul class="nav-list">
    <li class="my_space">
      <%= link_to notes_path do %>
        <i class="fas fa-user pr-2"></i>
        <span class="links_name">我的空間</span>
      <% end %>
    </li>
    <li>
      <div class="input-bar">
        <i class="fa-solid fa-magnifying-glass"></i>
        <div>
          <%= form_tag(notes_path, :method => "get") do %>
            <%= text_field_tag :search, nil, placeholder: "搜尋關鍵字或標籤", class: "m-3" %>
            <%= submit_tag "搜尋筆記" ,:note_name => nil, class: "hidden" %>
          <% end %>
        </div>
      </div>
    </li>
    <li class="create">
      <%=link_to notes_path, method: 'post' do %>
        <i class="fas fa-plus"></i>
        <span class="links_name">建立筆記</span>
      <% end %>
    </li>
    <li>
      <%= link_to notes_path do %>
        <i class="fas fa-lock"></i>
        <span class="links_name">我的筆記</span>
      <% end %>
    </li>
    <li>
      <%= link_to notes_path do %>
        <i class="fas fa-users"></i>
        <span class="links_name">協作筆記</span>
      <% end %>
    </li>
  </ul>
  <ul class="nave-list list2">
    <li>
      <%= link_to users_collections_path do %>
        <i class="fas fa-bookmark"></i>
        <span class="links_name">收藏</span>
      <% end %>
    </li>
    <li>
      <a>
        <i class="far fa-clock"></i>
        <span class="links_name">最近瀏覽</span>
      </a>
    </li>
    <li class="user_info">
      <div>
        <img src="<%= current_user.photo %>" alt="">
        <span><%= current_user.name %></span>
      </div>
      <div class="info-btns" data-controller="sideBar">
        <span data-action="click->sideBar#infoBoxToggle">
          <i class="fas fa-chevron-down"></i>
        </span>
        <span>
          <i class="fas fa-question"></i>
        </span>
        <div class="info-box" data-sideBar-target="infoBox">
          <% if current_user %>
            <div>
              <%= link_to "個人公開頁", user_public_note_path(current_user.id)%>
            </div>
            <div><%= link_to('登出', destroy_user_session_path, :method => :delete) %>
            </div>
            <div>
              <%= link_to('個人帳戶設定', edit_registration_path(:user)) %>
            </div>
          <% else %>
            <div>
              <%= link_to('註冊', new_registration_path(:user)) %>
            </div>
            <div>
              <%= link_to('登入', new_session_path(:user)) %>
            </div>
          <% end %>
        </div>
      </div>
    </li>
  </ul>
  <div class="handle" data-action= "mouseover->sideBar#toggle">
    <div class="handle-btn">
    </div>
  </div>
</div>
